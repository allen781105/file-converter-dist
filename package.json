{
  "name": "ppt-pdf-to-png-service",
  "version": "1.0.0",
  "description": "A standalone service for converting PPT/PDF files to PNG images with various layout options",
  "main": "src/electron-main.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "electron:dev": "electron .",
    "electron:build": "electron-builder",
    "rebuild": "electron-rebuild",
    "rebuild:node": "npm rebuild canvas"
  },
  "dependencies": {
    "dayjs": "^1.11.10",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "jszip": "^3.10.1",
    "libreoffice-convert": "^1.3.1",
    "multer": "^1.4.5-lts.1",
    "pdf-to-img": "^2.1.0",
    "sharp": "^0.34.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.2.13",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "node-gyp": "^10.0.1",
    "nodemon": "^3.0.2"
  },
  "build": {
    "appId": "com.fileconverter.app",
    "productName": "FileConverter",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": "dmg"
    },
    "files": [
      "**/*",
      "!dist/*",
      "!outputs/*",
      "!uploads/*"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  }
}